int a[101][101];
// <기본개념>1-> 3 으로 갈때 직접가는 방법과 거쳐가는 방법을 비교해서, 거쳐가는 방법이 더 효율적이라면 거쳐가는 방법으로 배열의 값을 변경해준다.
// a의 값들은 main함수에서 구현되어 있다고 가정.
void floid(){
  for (int k=0;k<100;k++) {// k는 중간점 (거쳐가는 지점)
    for (int i=0;i<100;i++){ // i는 시작점
      for (int j=0;j<100;j++){
        if ( a[i][k] + a[k][j] < a[i][j])
            a[i][j] = a[i][k] + a[k][i] ;
            }
           }
          }
}
